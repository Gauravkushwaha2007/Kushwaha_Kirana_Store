<%- include('../partials/header', { title: 'My Items' }) %>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">

    <!-- PAGE HEADING -->
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg sm:text-xl font-bold text-gray-800">
            🛒 Your Selected Products
        </h2>

        <span class="text-xs text-gray-500">
            <%= selectedProducts.length %> items
        </span>
    </div>

    <% let total = 0; %>

    <!-- EMPTY STATE -->
    <% if (selectedProducts.length === 0) { %>
        <div class="bg-white rounded-xl shadow p-8 text-center">
            <p class="text-gray-500 text-sm">
                No selected items yet 😕
            </p>
        </div>
    <% } %>

    <!-- PRODUCTS GRID -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">

        <% selectedProducts.forEach(p => { 
            total += Number(p.price);
        %>

        <a href="#"
           class="group bg-white rounded-2xl shadow-sm hover:shadow-lg
                  transition overflow-hidden relative block">

            <!-- IMAGE -->
            <div class="overflow-hidden">
                <!-- COUNTER -->
                <div class="absolute top-2 right-2 bg-white rounded-lg shadow flex items-center overflow-hidden"
                    data-product-id="<%= p._id %>">

                    <button type="button"
                        class="px-2 py-1 text-sm font-bold text-gray-600 hover:bg-gray-100"
                        onclick="decreaseQty('<%= p._id %>')">
                        −
                    </button>

                    <span id="qty-<%= p._id %>"
                        class="px-3 text-sm font-semibold">
                        1
                    </span>

                    <button type="button"
                        class="px-2 py-1 text-sm font-bold text-gray-600 hover:bg-gray-100"
                        onclick="increaseQty('<%= p._id %>')">
                        +
                    </button>
                </div>

                <img src="/<%= p.images[0] %>"
                     alt="<%= p.productName %>"
                     class="w-full h-32 sm:h-36 object-cover" />
            </div>

            <!-- DETAILS -->
            <div class="p-3 space-y-2">

                <p class="text-sm font-semibold text-gray-800 truncate">
                    <%= p.productName %>
                </p>

                <span id="price-<%= p._id %>"
                    class="text-green-600 font-bold text-sm"
                    data-price = "<%= p.price %>">
                    ₹ <%= p.price %>
                </span>

                <!-- REMOVE -->
                <form action="/removeProductFromCart" method="POST"
                      onclick="event.stopPropagation()">
                    <input type="hidden" name="productId" value="<%= p._id %>">
                    <button type="submit"
                        class="mt-2 w-full bg-red-500 text-white text-xs
                               px-3 py-1 rounded hover:bg-red-600 transition">
                        Remove
                    </button>
                </form>

            </div>
        </a>

        <% }) %>
    </div>

    <!-- ORDER SUMMARY -->
    <% if (selectedProducts.length > 0) { %>
    <div class="mt-8 bg-white rounded-2xl shadow p-6">

        <div class="flex justify-between items-center mb-4">
            <span class="text-lg font-semibold text-gray-700">
                Total Amount
            </span>
            <span id="total-amount" class="text-2xl font-bold text-green-700">
                ₹ <%= total %>
            </span>
        </div>

        <p class="text-sm text-gray-500 mb-4">
            Inclusive of all taxes • Cash on Delivery available
        </p>

        <button
            class="w-full flex items-center justify-center gap-2
                   bg-blue-600 text-white text-sm font-semibold
                   px-4 py-3 rounded-xl
                   hover:bg-blue-700 transition">
            Order All
        </button>

    </div>
    <% } %>

</section>

<script>
    const quantities = {};

    function updateTotal() {
        let total = 0;
        document.querySelectorAll('[id^="price-"]').forEach((el) => {
            const productId = el.id.replace('price-', '');
            const base = Number(el.dataset.price) || 0;
            const qty = quantities[productId] || 1;
            total += base * qty;
        });
        const totalEl = document.getElementById('total-amount');
        if (totalEl) {
            totalEl.innerText = `₹ ${total}`;
        }
    }

    function updatePrice(productId) {
        const priceEl = document.getElementById(`price-${productId}`);
        const base = Number(priceEl.dataset.price);
        const qty = quantities[productId] || 1;
        priceEl.innerText = `₹ ${base * qty}`;
        updateTotal();
    }

    function increaseQty(productId) {
        if (!quantities[productId]) {
            quantities[productId] = 1;
        }
        quantities[productId]++;
        document.getElementById(`qty-${productId}`).innerText = quantities[productId];
        updatePrice(productId);
    }

    function decreaseQty(productId) {
        if (!quantities[productId]) {
            quantities[productId] = 1;
        }
        if (quantities[productId] > 1) {
            quantities[productId]--;
            document.getElementById(`qty-${productId}`).innerText = quantities[productId];
            updatePrice(productId);
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('[data-product-id]').forEach((el) => {
            const productId = el.dataset.productId;
            quantities[productId] = 1;
        });
        updateTotal();
    });

</script>

<%- include('../partials/footer') %>
