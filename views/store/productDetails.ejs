<%- include('../partials/header',{ title: product.productName }) %>

<div class="bg-gray-100 py-10">
  <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-8">

    <!-- IMAGE SECTION -->
    <div class="bg-white rounded-2xl overflow-hidden shadow">
      <img
        id="mainImage"
        src="/<%= product.images[0] %>"
        alt="<%= product.productName %>"
        class="w-full h-[420px] object-contain bg-gray-50"
      />

      <!-- Thumbnails -->
      <div class="flex gap-3 p-4 overflow-x-auto">
        <% product.images.forEach(img => { %>
          <img
            src="/<%= img %>"
            onclick="changeImage('/<%= img %>')"
            class="w-20 h-20 object-cover rounded-xl cursor-pointer
                   border hover:border-black transition"
          />
        <% }) %>
      </div>
    </div>

    <!-- PRODUCT DETAILS -->
    <div class="bg-white rounded-2xl shadow p-6 space-y-5">

      <!-- Title -->
      <h1 class="text-2xl md:text-3xl font-semibold text-gray-900">
        <%= product.productName %>
      </h1>

      <!-- Rating -->
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <span class="text-yellow-500">★★★★☆</span>
        <span>4.3 (124 reviews)</span>
      </div>

      <!-- Price -->
      <div class="flex items-center gap-4">
        <span class="text-3xl font-bold text-gray-900">
          ₹ <%= product.price %>
        </span>
        <span class="line-through text-gray-400">
          ₹ <%= product.price + 200 %>
        </span>
        <span class="text-green-600 font-medium">
          Limited offer
        </span>
      </div>

      <!-- Description -->
      <p class="text-gray-700 leading-relaxed">
        <%= product.description %>
      </p>

      <!-- Quantity (UI only) -->
      <div class="flex items-center gap-3">
        <span class="font-medium">Qty:</span>
        <div class="flex items-center border rounded-lg">
          <button class="px-3 py-1">−</button>
          <span class="px-4">1</span>
          <button class="px-3 py-1">+</button>
        </div>
      </div>

      <!-- ACTION BUTTONS -->
      <div class="flex gap-4 pt-4">

        <!-- Add to Cart -->
        <form action="/myOrders" method="POST" class="flex-1">
          <input type="hidden" name="id" value="<%= product._id %>">
          <button
            type="submit"
            class="w-full bg-black text-white py-3 rounded-xl
                   font-medium hover:bg-gray-800 transition">
            Add to Cart
          </button>
        </form>

        <!-- Favourite -->
        <form action="/favouriteList" method="POST">
          <input type="hidden" name="productId" value="<%= product._id %>">
          <button
            type="submit"
            class="border rounded-xl px-4 text-xl hover:bg-gray-100 transition">
            ❤️
          </button>
        </form>

      </div>

      <!-- TRUST INFO -->
      <div class="pt-4 text-sm text-gray-600 space-y-1">
        <p>✔ Cash on Delivery available</p>
        <p>✔ 7 Days easy return</p>
        <p>✔ Free delivery above ₹999</p>
      </div>

    </div>

  </div>
</div>

<script>
  function changeImage(src) {
    document.getElementById('mainImage').src = src;
  }
</script>

<%- include('../partials/footer') %>
