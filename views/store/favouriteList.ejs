<%- include('../partials/header', { title: 'Favourite Items' }) %>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">

    <!-- PAGE HEADING -->
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg sm:text-xl font-bold text-gray-800">
            ‚ù§Ô∏è Your Favourite Items
        </h2>

        <span class="text-xs text-gray-500">
            <%= favouriteProducts.length %> items
        </span>
    </div>

    <!-- EMPTY STATE -->
    <% if (favouriteProducts.length === 0) { %>
        <div class="bg-white rounded-xl shadow p-8 text-center">
            <p class="text-gray-500 text-sm">
                No favourite items yet üòï
            </p>
        </div>
    <% } %>

    <!-- PRODUCTS GRID -->
    <div id="productGrid"
        class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">

        <% favouriteProducts.forEach(p => { %>

        <div class="group bg-white rounded-2xl shadow-sm hover:shadow-lg transition overflow-hidden relative">

            <!-- REMOVE FROM FAVOURITE -->
            <button
                class="absolute top-2 right-2 z-10 bg-white p-1.5 rounded-full shadow
                       hover:bg-red-50 transition"
                title="Remove from favourites">
                ‚ù§Ô∏è
            </button>

            <!-- IMAGE -->
            <div class="overflow-hidden">
                <img src="<%= p.imageUrl %>"
                     alt="<%= p.productName %>"
                     class="w-full h-32 sm:h-36 object-cover
                            group-hover:scale-105 transition duration-300" />
            </div>

            <!-- DETAILS -->
            <div class="p-3 space-y-2">

                <p class="text-sm font-semibold text-gray-800 truncate">
                    <%= p.productName %>
                </p>

                <div class="flex items-center justify-between">
                    <span class="text-green-600 font-bold text-sm">
                        ‚Çπ <%= p.price %>
                    </span>
                </div>

                <!-- ACTION BUTTON -->
                <button
                    class="w-full flex items-center justify-center gap-2
                           bg-orange-500 text-white text-xs font-semibold
                           px-3 py-2 rounded-lg
                           hover:bg-orange-600 transition">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor"
                         stroke-width="2" viewBox="0 0 24 24">
                        <path d="M3 3h18l-2 13H5z"/>
                    </svg>
                    Add to Cart
                </button>

            </div>
        </div>

        <% }) %>
    </div>

</section>

<%- include('../partials/footer') %>
